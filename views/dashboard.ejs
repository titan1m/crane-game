<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - CraneCare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-crane me-2"></i>
                CraneCare Pro
            </a>
            <div class="navbar-nav ms-auto">
                <span class="navbar-text me-3">Welcome, <%= user.username %></span>
                <a class="nav-link" href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Dashboard Content -->
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="list-group">
                    <a href="/dashboard" class="list-group-item list-group-item-action active">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                    <a href="/scanner" class="list-group-item list-group-item-action">
                        <i class="fas fa-qrcode me-2"></i>QR Scanner
                    </a>
                    <a href="/manual-entry" class="list-group-item list-group-item-action">
                        <i class="fas fa-keyboard me-2"></i>Manual Entry
                    </a>
                    <a href="/defects" class="list-group-item list-group-item-action">
                        <i class="fas fa-exclamation-triangle me-2"></i>Defects
                    </a>
                    <a href="/maintenance" class="list-group-item list-group-item-action">
                        <i class="fas fa-tools me-2"></i>Maintenance
                    </a>
                    <a href="/guide" class="list-group-item list-group-item-action">
                        <i class="fas fa-book me-2"></i>How to Use
                    </a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="col-md-9">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <h5><i class="fas fa-crane me-2"></i>Total Cranes</h5>
                                <h2><%= cranes.length %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-warning mb-3">
                            <div class="card-body">
                                <h5><i class="fas fa-exclamation-triangle me-2"></i>Active Errors</h5>
                                <h2><%= errors.filter(e => e.status === 'pending').length %></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-white bg-success mb-3">
                            <div class="card-body">
                                <h5><i class="fas fa-check-circle me-2"></i>Resolved</h5>
                                <h2><%= errors.filter(e => e.status === 'resolved').length %></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Errors -->
                <div class="card">
                    <div class="card-header">
                        <h5>Recent Error Reports</h5>
                    </div>
                    <div class="card-body">
                        <% if (errors.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Crane ID</th>
                                            <th>Error Code</th>
                                            <th>Severity</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% errors.forEach(error => { %>
                                            <tr>
                                                <td><%= error.craneId %></td>
                                                <td><%= error.errorCode %></td>
                                                <td>
                                                    <span class="badge bg-<%= 
                                                        error.severity === 'critical' ? 'danger' : 
                                                        error.severity === 'high' ? 'warning' : 
                                                        error.severity === 'medium' ? 'info' : 'secondary' 
                                                    %>">
                                                        <%= error.severity %>
                                                    </span>
                                                </td>
                                                <td><%= error.dateReported.toLocaleDateString() %></td>
                                                <td>
                                                    <span class="badge bg-<%= error.status === 'pending' ? 'warning' : 'success' %>">
                                                        <%= error.status %>
                                                    </span>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        <% } else { %>
                            <p class="text-muted">No errors reported yet.</p>
                        <% } %>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-qrcode fa-3x text-primary mb-3"></i>
                                <h5>Quick Scan</h5>
                                <p>Scan QR code to report error</p>
                                <a href="/scanner" class="btn btn-primary">Open Scanner</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-body text-center">
                                <i class="fas fa-keyboard fa-3x text-success mb-3"></i>
                                <h5>Manual Entry</h5>
                                <p>Enter error details manually</p>
                                <a href="/manual-entry" class="btn btn-success">Manual Entry</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
