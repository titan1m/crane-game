<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Maintenance - CraneCare</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/dashboard">
                <i class="fas fa-crane me-2"></i>CraneCare Pro
            </a>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <!-- Add Maintenance Form -->
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-plus-circle me-2"></i>Add Maintenance Record</h5>
                    </div>
                    <div class="card-body">
                        <form action="/add-maintenance" method="POST">
                            <div class="mb-3">
                                <label class="form-label">Crane ID *</label>
                                <input type="text" class="form-control" name="craneId" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Maintenance Type *</label>
                                <select class="form-select" name="maintenanceType" required>
                                    <option value="routine">Routine Check</option>
                                    <option value="preventive">Preventive Maintenance</option>
                                    <option value="corrective">Corrective Maintenance</option>
                                    <option value="emergency">Emergency Repair</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Technician Name *</label>
                                <input type="text" class="form-control" name="technician" required>
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" name="description" rows="3"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Add Maintenance Record</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <!-- Maintenance Schedule -->
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-calendar-alt me-2"></i>Upcoming Maintenance</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info">
                            <h6>Next Scheduled Maintenance</h6>
                            <p class="mb-1">Crane TC-001 - Tower Crane</p>
                            <small>Due: 2024-02-15 | Type: Routine Check</small>
                        </div>
                        <div class="alert alert-warning">
                            <h6>Overdue Maintenance</h6>
                            <p class="mb-1">Crane MC-005 - Mobile Crane</p>
                            <small>Was due: 2024-01-20 | Type: Preventive</small>
                        </div>
                    </div>
                </div>

                <!-- Quick Stats -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5><i class="fas fa-chart-bar me-2"></i>Maintenance Stats</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <h4>12</h4>
                                <small class="text-muted">This Month</small>
                            </div>
                            <div class="col-6">
                                <h4>145</h4>
                                <small class="text-muted">Total Records</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
